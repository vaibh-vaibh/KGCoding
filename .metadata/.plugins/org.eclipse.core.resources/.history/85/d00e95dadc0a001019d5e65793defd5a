import java.util.Scanner;

public class LeftHalfPyramid 
{
	public static void main(String[] args) 
	{
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		for(int i=1;i<=n;i++)
		{
			for(int s=n-1;s>=1;s--)
			{
				System.out.print(" ");
			}
			for(int j=n;j>=i;j--)
			{
				System.out.print(" *");
			}
			System.out.println();
		}
		sc.close();
	}

}
